<view class="container">
    <image src="{{isPlaying ? postData.music.coverImg : postData.head_img}}" class="head-image"></image>
    <image catchtap="onMusicTap" class="audio" src="{{isPlaying ? '/images/icon/music-stop.png': '/images/icon/music-start.png'}}"></image>
    <view class="author-date">
        <image class="avatar" src="{{postData.author_img}}"></image>
        <text class="author">{{postData.author}}</text>
        <text class="const-text">发表于</text>
        <text class="date">{{postData.dateTime}}</text>
    </view>
    <text class="title">{{postData.title}}</text>
    <view class="tool">
        <view class="circle-img">
            <image wx:if="{{collected}}" catchtap="onCollectionTap" src="/images/icon/collection.png"></image>
            <image wx:else catchtap="onCollectionTap" src="/images/icon/collection-anti.png"></image>
            <image catchtap="onShareTap" class="share-img" src="/images/icon/share.png"></image>
        </view>
        <view class="horizon"></view>
    </view>
    <text class="detail">{{postData.detail}}</text>
</view>