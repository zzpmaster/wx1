swiper {
    width:100%;
    height:400rpx;
}

/* less sass */
swiper image {
    width:100%;
    height:400rpx;
}

.post-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
}

.post-author-date {
    /*margin-top: 10rpx;
    margin-bottom: 20rpx;
    margin-left: 10rpx;*/
    margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle; /*后面有文本，需要垂直居中*/
}

.post-date {
    margin-left: 20rpx;
    margin-bottom: 5px;
    vertical-align: middle;
    font-size: 26rpx;
}
/*
    如果是水平方向（多个元素之间的距离）的建议用rpx
    如果是垂直方向的建议用px
*/
.post-title {
    font-size: 34rpx;
    font-weight: 600; /*加粗*/
    color: #333;
    margin-bottom: 10px;    /*为什么会用px，在不同的机型中，距离会不可控*/
    margin-left: 10px;
}

.post-image {
    margin-left: 16px;
    width: 100%;
    height: 340rpx;
    margin: auto 0;
    /*margin-bottom: 15px;*/
}

.post-content {
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;   /*文字间距*/
    line-height: 40rpx; /*行高*/
}

.post-like {
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}

.post-like-image {
    width: 16px;
    height: 16px;
    margin-right: 8px;
    vertical-align: middle;
}

.post-like-font {
    vertical-align: middle;
    margin-right: 20px;
}